<Window x:Class="Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calc"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="30" Margin="33,24,0,0" TextWrapping="Wrap" Text="{Binding Text}" VerticalAlignment="Top" Width="300"/>
        <CheckBox x:Name="checkBox" Content="表示" IsChecked="{Binding Check}" HorizontalAlignment="Left" Margin="33,118,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button" Content="↓追加" HorizontalAlignment="Left" Margin="233,78,0,0" VerticalAlignment="Top" Width="100" Height="30" FontFamily="Meiryo" Click="button_Click"/>
        <ListBox x:Name="listBox" ItemsSource="{Binding Items}" HorizontalAlignment="Left" Height="100" Margin="33,136,0,0" VerticalAlignment="Top" Width="300"/>
    </Grid>
</Window>
